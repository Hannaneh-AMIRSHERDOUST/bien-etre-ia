@prefix beo: <https://example.org/bien-etre-ia#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

<https://example.org/bien-etre-ia#> a owl:Ontology ;
    dcterms:title "Bien-Être IA" .

# Classes
beo:Exercise a rdfs:Class ;
    rdfs:label "Exercice de bien-être" ;
    rdfs:comment "Une activité ou pratique liée au bien-être." .

beo:Emotion a rdfs:Class ;
    rdfs:label "Émotion" ;
    rdfs:comment "Une émotion ou état ressenti avant ou après un exercice." .

beo:Goal a rdfs:Class ;
    rdfs:label "Objectif" ;
    rdfs:comment "Objectif bien-être (relaxation, glow up, confiance, focus)." .

# Properties
beo:hasCategory a rdf:Property ;
    rdfs:label "Catégorie" ;
    rdfs:domain beo:Exercise ;
    rdfs:range rdfs:Literal .

beo:duration a rdf:Property ;
    rdfs:label "Durée" ;
    rdfs:domain beo:Exercise ;
    rdfs:range rdfs:Literal .

beo:neededMaterial a rdf:Property ;
    rdfs:label "Matériel nécessaire" ;
    rdfs:domain beo:Exercise ;
    rdfs:range rdfs:Literal .

beo:recommendedFor a rdf:Property ;
    rdfs:label "Recommandé pour" ;
    rdfs:domain beo:Exercise ;
    rdfs:range beo:Goal .

beo:beforeEmotion a rdf:Property ;
    rdfs:label "Émotion avant" ;
    rdfs:domain beo:Exercise ;
    rdfs:range beo:Emotion .

beo:afterEmotion a rdf:Property ;
    rdfs:label "Émotion après" ;
    rdfs:domain beo:Exercise ;
    rdfs:range beo:Emotion .

beo:mediaFile a rdf:Property ;
    rdfs:label "Fichier média" ;
    rdfs:domain beo:Exercise ;
    rdfs:range rdfs:Literal .
