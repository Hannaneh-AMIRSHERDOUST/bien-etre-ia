<script>
const chatBox = document.getElementById('chatBox');
const userInput = document.getElementById('userInput');
const sendBtn = document.getElementById('sendBtn');

userInput.addEventListener('keypress', (e) => {
    if (e.key === 'Enter') sendMessage();
});

function addMessage(text, isUser = false) {
    const messageDiv = document.createElement('div');
    messageDiv.className = isUser ? 'user-message' : 'bot-message';
    
    const bubble = document.createElement('div');
    bubble.className = `message-bubble ${isUser ? 'user' : 'bot'}`;
    bubble.textContent = text;
    
    messageDiv.appendChild(bubble);
    chatBox.appendChild(messageDiv);
    chatBox.scrollTop = chatBox.scrollHeight;
}

function showTyping() {
    const typing = document.createElement('div');
    typing.className = 'bot-message typing';
    typing.innerHTML = '<div class="typing-indicator"><span></span><span></span><span></span></div>';
    chatBox.appendChild(typing);
    chatBox.scrollTop = chatBox.scrollHeight;
    return typing;
}

async function sendMessage() {
    const message = userInput.value.trim();
    if (!message) return;
    
    addMessage(message, true);
    userInput.value = '';
    sendBtn.disabled = true;
    
    const typing = showTyping();
    
    try {
        const response = await fetch(chatEndpoint, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ message })
        });
        
        const data = await response.json();
        typing.remove();
        
        addMessage(data.message);
        
        if (data.exercises && data.exercises.length > 0) {
            const linksDiv = document.createElement('div');
            linksDiv.className = 'bot-message';
            
            const bubble = document.createElement('div');
            bubble.className = 'message-bubble bot';
            
            data.exercises.forEach(ex => {
                const link = document.createElement('a');
                link.href = ex.url || '#';
                link.className = 'exercise-link';
                link.textContent = ex.title;
                link.target = '_blank';
                bubble.appendChild(link);
            });
            
            linksDiv.appendChild(bubble);
            chatBox.appendChild(linksDiv);
        }
        
        chatBox.scrollTop = chatBox.scrollHeight;
    } catch (error) {
        typing.remove();
        addMessage("DÃ©solÃ©, une erreur s'est produite. RÃ©essayez.");
    } finally {
        sendBtn.disabled = false;
        userInput.focus();
    }
}
</script>
